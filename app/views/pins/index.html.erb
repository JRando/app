<%= render 'pages/home' unless user_signed_in? %>

    <div id="pins" class="transitions-enabled">
      <% @pins.each do |pin| %>
        <div class="box panel panel-default">
          <%= link_to image_tag(pin.image.url(:medium)), pin %>
          <div class='panel_body'>
           <p> <%= pin.description %></p>
            <p><strong><%= pin.user.name if pin.user %></strong></p>

            <% if current_user && pin.user == current_user %>
            <div class='actions'>
              <%= link_to edit_pin_path(pin) do %>
                 <center><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
              <% end %>
              <%= link_to pin, method: :delete, data: { confirm: 'Forreal?' } do %>
                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span></center>
               
              <% end %>
            </div>
           <% end %>
         </div>
         </div>
  <% end %>
</div>

<center><%= will_paginate @posts, renderer: BootstrapPagination::Rails %></center>

